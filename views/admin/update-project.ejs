<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Project</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <h1>Update Project</h1>
    <% if (successMessage) { %>
    <div class="flash-message success"><%= successMessage %></div>
    <% } %> <% if (errorMessage) { %>
    <div class="flash-message error"><%= errorMessage %></div>
    <% } %>
    <form
      action="/admin/update-project/<%= project._id %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= project.title %>"
        required
      />

      <label for="description">Description:</label>
      <textarea id="description" name="description">
<%= project.description %></textarea
      >

      <label for="author">Author:</label>
      <input
        type="text"
        id="author"
        name="author"
        value="<%= project.author %>"
      />

      <label for="supervisor">Supervisor:</label>
      <input
        type="text"
        id="supervisor"
        name="supervisor"
        value="<%= project.supervisor %>"
      />

      <label for="yearOfCompletion">Year of Completion:</label>
      <input
        type="number"
        id="yearOfCompletion"
        name="yearOfCompletion"
        value="<%= project.yearOfCompletion %>"
      />

      <label for="banner">Upload New Image:</label>
      <input type="file" id="banner" name="banner" />

      <button type="submit">Update Project</button>
    </form>
    <a href="/project/project-search">Cancel</a>
    <!-- Link back to project list -->

    <script src="/js/flash-message.js"></script>
  </body>
</html>
